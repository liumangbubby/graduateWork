<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="ref">
	<typeAlias alias="userdetails" type="cn.gov.jyw.pojo.user_details" />
	<resultMap id="detailsresultMap" class="userdetails">
		<result property="id" column="id" />
		<result property="user_id" column="user_id" />
		<result property="savedate" column="savedate" />
		<result property="ques_no" column="ques_no"/>
		<result property="type" column="type"/>
	</resultMap>
	
	<select id="QueryUserQuesNo" parameterClass="int" resultClass="int">
		select ques_no from user_details where user_id = #user_id# and savedate = (
			select max(savedate) from user_details where user_id = #user_id#
			)
	</select>
	<insert id="InsertUserDetails" parameterClass="userdetails">
		insert into
		user_details(user_id,savedate,ques_no,type) values(#user_id#,#savedate#,#ques_no#,#type#)
	</insert>
</sqlMap>